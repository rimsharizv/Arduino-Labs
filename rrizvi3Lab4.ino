// sizeof gives the number of bytes, each int value is composed of two bytes (16 bits)
// there are two values per note (pitch and duration), so for each note there are four bytes
int notes = sizeof(melody) / sizeof(melody[0]) / 2;

// this calculates the duration of a whole note in ms
int wholenote = (60000 * 4) / tempo;

int divider = 0, noteDuration = 0;

void setup() {
  pinMode(SW_pin, INPUT);
  pinMode(topLight, OUTPUT);
  pinMode(bottomLight, OUTPUT);
  pinMode(leftLight, OUTPUT);
  pinMode(rightLight, OUTPUT);

  digitalWrite(SW_pin, HIGH);
  Serial.begin(9600);
}

void loop() {
    // iterate over the notes of the melody.
    // Remember, the array is twice the number of notes (notes + durations)
  for (int thisNote = 0; thisNote < notes * 2; thisNote = thisNote + 2) {

    int x_value = analogRead(A0);
    int y_value = analogRead(A1);

    // moving it the joystick up and down

    if(x_value < 50){
      digitalWrite(topLight, HIGH);
    }
    else{
      digitalWrite(topLight, LOW);
    }
    if (x_value > 900){
      digitalWrite(bottomLight, HIGH);
    }
    else{
      digitalWrite(bottomLight, LOW);
    }

    // moving it the joystick left and right
    if (y_value > 900){
      digitalWrite(leftLight, HIGH);
    }
    else{
      digitalWrite(leftLight, LOW);
    }
    if (y_value < 50){
      digitalWrite(rightLight, HIGH);
    }
    else{
      digitalWrite(rightLight, LOW);
    }

    // Serial.print("Y: ");
    // Serial.print(y_value);
    // Serial.print(" ");
    // Serial.print("X: ");
    // Serial.print(x_value);
    // Serial.print(" ");


    int lightRaw = analogRead(photoPin);
    int light = map(lightRaw, 1023, 0, 25, 1);

    // calculates the duration of each note
    divider = pgm_read_word_near(melody+thisNote + 1);
    int speed = divider * light;
    if (divider > 0) {
      // regular note, just proceed
      noteDuration = (wholenote) / (speed);  // changing the speed
    } else if (divider < 0) {
      // dotted notes are represented with negative durations!!
      noteDuration = (wholenote) / abs(speed);
      noteDuration *= 1.5; // increases the duration in half for dotted notes
    }

    // we only play the note for 90% of the duration, leaving 10% as a pause
    tone(piezo, pgm_read_word_near(melody+thisNote), noteDuration * 0.9);

    // Wait for the specief duration before playing the next note.
    delay(noteDuration);

    // stop the waveform generation before the next note.
    noTone(piezo);
  }

  delay(200);
}